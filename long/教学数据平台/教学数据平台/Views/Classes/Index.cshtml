@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/jquery-easyui-1.5.1/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/jquery-easyui-1.5.1/themes/icon.css" rel="stylesheet" />
   
    <script src="~/jquery-easyui-1.5.1/jquery.min.js"></script>
    <script src="~/jquery-easyui-1.5.1/jquery.easyui.min.js"></script>
    <script>
        $(function(){
            var tb = [
                                 {
                                     text: '添加',
                                     iconCls: 'icon-add',
                                     handler: function () {

                                         var url = "/teachers/Add";
                                         $("#teachers_add_dlg").dialog({
                                             title: "教师添加--",
                                             iconCls: 'icon-add',
                                             modal: true,
                                             width: 300,
                                             href: url,
                                             buttons: [
                                    {
                                        text: '保存',
                                        iconCls: 'icon-save',
                                        handler: function () {

                                           
                                            var da = $("#teachers_add").serialize();


                                            $.get("/teachers/addteacher", da, function (das) {
                                                if (das == "ok") {
                                                    //alert("成功");
                                                    $.messager.show({
                                                        title: '提示',
                                                        msg: '成功',
                                                        showType: 'show'
                                                    });
                                                    $("#teachers_add_dlg").dialog("close");
                                                    $("#tb").datagrid("reload");

                                                }
                                                else { alert("失败"); }
                                            }, "text")
                                        }
                                    },
                                    {
                                        text: '取消',
                                        iconCls: 'icon-cancel',
                                        handler: function () {
                                            $("#teachers_add_dlg").dialog("close");
                                        }
                                    }
                                             ]
                                         });
                                     }
                                 },
                                 {
                                     text: '修改',
                                     icon: 'icon-edit',
                                     handler: function () {
                                         var id = $("#tb").datagrid("getSelected").ID;
                                         //window.location.href = "/departments/EditIndex?id=" + id;
                                         var url = "/Majors/Edit?id=" + id;
                                         $("#dlgEdit").dialog({
                                             title: "部门修改--",
                                             iconCls: 'icon-Edit',

                                             modal: true,
                                             width: 300,
                                             height: 200,
                                             href: url,
                                             buttons: [
                                                 {
                                                     text: '保存',
                                                     iconCls: 'icon-save',
                                                     handler: function () {


                                                         var name = $("#view_EditIndex_depname").val();
                                                         var id = $("#view_EditIndex_Id").val();
                                                         var we = $("#wwe").val;
                                                         var iid = $("#tb").datagrid("getSelected").ID;
                                                         console.log(id);
                                                         $.get("/Majors/EditMajors", { ID: iid, DepartmentID: id, Name: name, Status: 0 }, function (das) {

                                                             if (das == "ok") {
                                                                 //alert("成功");
                                                                 $.messager.show({
                                                                     title: '提示',
                                                                     msg: '成功',
                                                                     showType: 'show'
                                                                 });
                                                                 $("#dlgEdit").dialog("close");
                                                                 $("#tb").datagrid("reload");

                                                             }
                                                             else { alert("修改失败"); }
                                                         }, "text")
                                                     }
                                                 },
                                    {
                                        text: '取消',
                                        iconCls: 'icon-cancel',
                                        handler: function () {
                                            $("#teachers_add_dlg").dialog("close");
                                        }
                                    }
                                             ]
                                         });
                                     }
                                 }, '-',
                                 {
                                     text: '删除',
                                     iconCls: 'icon-remove',
                                     handler: function () {
                                         var id = $("#tb").datagrid("getSelected").ID;
                                         $.get("/teachers/DelectTeacher", { id: id }, function (das) {
                                             if (das == "ok") {
                                                 //alert("成功");
                                                 $.messager.show({
                                                     title: '提示',
                                                     msg: '成功',
                                                     showType: 'show'
                                                 });
                                                 $("#dlgEdit").dialog("close");
                                                 $("#tb").datagrid("reload");

                                             }
                                             else { alert("失败"); }
                                         }, "text")



                                     }
                                 },
                                 {
                                     text: '密码重置',
                                     iconCls: 'icon-lock',
                                     handler: function () {
                                         var row = $("#tb").datagrid("getSelected");
                                         if (row == null) {
                                             $.messager.alert("提示", "请选择要重置密码的用户！", "warning");
                                             return;
                                         }
                                         var name = row.Name;
                                         $.messager.confirm("提示", "确信重置“" + name + "”的密码?", function (result) {
                                             if (result) {
                                                 var id = row.ID;
                                                 $.get("/teachers/resetpass/", { id: id }, function (data) {
                                                     if (data == "ok")
                                                         $.messager.show({
                                                             title: '提示',
                                                             msg: '成功',
                                                             showType: 'show'
                                                         })
                                                     else
                                                         $.messager.show({
                                                             title: '提示',
                                                             msg: '失败',
                                                             showType: 'show'
                                                         });
                                                 })
                                             }

                                         });
                                     } 
                                 }

            ];

            $("#majors").combobox({
                width: 200,
                onSelect:function(newvalue,oldvalue)
                {
                    $("#tb").datagrid("reload");
                },
                url: "/majors/GetMajor?deptId=20",
                valueField: 'ID',
                textField: 'Name'
            });

            $("#majors").combobox("select", "1");
            $("#tb").datagrid({
                url: '/Classes/GetClassesListByMajorIdWithDirector/',
                queryParams:{
                    majorId:$("#majors").combobox("getValue")
                },
                width: 700,
                height: 460,
                fitColumns: true,
                singleSelect: true,
               // pagination: true,
                toolbar: tb,
                columns: [[

                    { field: 'Name', title: '班级名称' },
                      { field: 'TeacherName', title: '班主任姓名' },
                      { field: 'TeacherNo', title: '班主任工号' }
                      

                
                ]]
            });


        });
        function query() {
            $("#tb").datagrid("load", {
                majorId: $("#majors").combobox("getValue")
            });
        }
    </script>
</head>
<body>
    <div>
    <select class="esayui-combobox" id="majors"></select>@*<a onclick="query();" style="width:60px;" class="esayui-linkbutton">查询</a>*@
     <input type="button" onclick="query();" value="查询"/>
        <table id="tb"></table>
    </div>
</body>
</html>
